include "primitives.fbs";

namespace protocol;

table AssetCreate {
  asset:  string  (required);
}

table AssetDelete {
  target_asset:  string  (required);
}

table AssetMove {
  source_asset: string  (required);
  destination_asset:  string  (required);
}

table AccountCreate {
  username: string  (required);
  signatories:  [Signature] (required);
  quorum: ubyte;
  domain: string;
}

table AccountDelete {
  target_account:  string  (required);
}

table AccountRegister {
  target_account: string  (required);
  destination_account:  string  (required);
  permission: [ubyte];
}

table AccountUnregister {
  target_account: string  (required);
}


table DomainCreate {
  domain: string  (required);
  root_account: string  (required);
}

table DomainDelete {
  target_domain:  string  (required);
}

table DomainMove {
  source_domain:  string  (required);
  destination_domian: string  (required);
}

table DomainSetPermission {
  domain: string  (required);
  account:  string  (required);
  permission: [ubyte] (required);
}

// [WIP] DomainAddNotify
table DomainSetNotify {
  target_domain:  string  (required);
  is_notify:  bool;
}

union DomainAction{
  AssetCreate,
  AssetDelete,
  AssetMove,

  AccountCreate,
  AccountDelete,
  AccountRegister,
  AccountUnregister,

  DomainCreate,
  DomainDelete,
  DomainMove,
  DomainSetPermission,
  DomainSetNotify
}

table DomainActionWrapper {
  action: DomainAction;
}