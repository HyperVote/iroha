include "primitives.fbs";

namespace protocol;

table Peer {
  ip: string  (required);
  uuid: string  (required);
  name: string;
  trust:  double;
  state:  bool;
}

table PeerAdd {
  peer: Peer  (required);
}

table PeerRemove {
  target_peer: string  (required);
}

table PeerSetTrust {
  target_peer:  string  (required);
  trust:  double  (required);
}

table PeerChangeTrust {
  target_peer:  string  (required);
  turst:  double  (required);
}

table PeerSetState {
  target_peer:  string  required);
  state:  bool  (required);
}

union PeerAction{
  PeerAdd,
  PeerRemove,
  PeerSetTrust,
  PeerChangeTrust,
  PeerSetState
}