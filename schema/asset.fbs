include "primitives.fbs";

namespace protocol;

table Currency {
  amount: [ubyte] (required);
  precision:  ubyte (requried);
}

// [WIP] ComplexAsset
table ComplexAsset {
  prop: [ubyte] (required);
  logic:  [ubyte] (required);
}

union AnyAsset {
  Currency,
  ComplexAsset
}

table Asset {
  name: string;
  uuid: string;
  description:  string;
  asset:  AnyAsset  (required);
}
